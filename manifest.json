{
    "manifest_version": 3,
    "name": "PhishGuard - Phishing Detector",
    "version": "1.0",
    "description": "Detect and warn users about phishing websites in real-time.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": ["activeTab", "scripting", "notifications"],
    "host_permissions": [
      "https://safebrowsing.googleapis.com/"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  